{
  "name": "smart-backspace-empty-line",
  "displayName": "Smart Editing Tools",
  "description": "Smart backspace for empty lines and auto-save - PhpStorm/IntelliJ style",
  "version": "0.0.5",
  "publisher": "plz",
  "author": {
    "name": "plz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/panlizhangcomeon/smart-backspace-empty-line"
  },
  "engines": {
    "vscode": "^1.80.0",
    "cursor": ">=0.1.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "smart",
    "editing",
    "tools",
    "backspace",
    "empty",
    "line",
    "autosave",
    "auto-save",
    "productivity",
    "editor",
    "phpstorm",
    "intellij",
    "cursor",
    "vscode"
  ],
  "activationEvents": [
    "onCommand:smartBackspace.smartBackspace",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smartBackspace.smartBackspace",
        "title": "Smart Editing Tools: Smart Backspace"
      },
      {
        "command": "smartBackspace.toggleAutoSave",
        "title": "Smart Editing Tools: 切换自动保存"
      }
    ],
    "keybindings": [
      {
        "command": "smartBackspace.smartBackspace",
        "key": "backspace",
        "when": "editorTextFocus && !editorReadonly"
      }
    ],
    "configuration": {
      "title": "Smart Editing Tools",
      "properties": {
        "smartBackspace.autoSave.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用自动保存功能（类似PHPStorm的autoSave）"
        },
        "smartBackspace.autoSave.delay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "自动保存延迟时间（毫秒），在停止输入后多久触发保存"
        },
        "smartBackspace.autoSave.showNotification": {
          "type": "boolean",
          "default": false,
          "description": "保存时在状态栏显示通知"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.3.0",
    "@types/mocha": "^10.0.0",
    "eslint": "^8.28.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.4"
  }
}